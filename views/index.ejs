<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <% include ./partials/header.ejs %>
</head>

<body>

  <h2>
    <% if (currentUser) { %>
        Welcome <%=currentUser.username%>!
  <%  } %>
  </h2>

  <div class="index-content">
    <% for (let i = 0; i < products.length; i++) { %>
    <div class="container">
      <a href="/ootd/<%=products[i].id%>">
        <img class="index-img" src="<%=products[i].img%>" alt="outfit">
      </a>
    </div>
    <% } %>
  </div>
  <footer>
    <% include ./partials/footer.ejs %>
  </footer>

  <div id="modal">
  <div id="modal-container">
    <div class="login">
      <a id="close" href="">Close</a>
      <div class="login-form">
      <h3>Join OOTD!</h3>

        <form action="/users" method="POST">

              <label for="username">User Name</label><br>
              <input placeholder="Username" id="username" type="text" class="validate" name="username" required>
              <br>

              <label for="password">Password</label><br>
              <input id="password" type="password" class="validate" name="password" required><br>

          <button class="button" type="submit" name="action">Register</button>

        </form>
      </div>
      <div class="login-form">
      <h3>Log In!</h3>

        <form action="/sessions" method="POST">

              <label for="username">User Name</label><br>
              <input placeholder="Username" id="username" type="text" class="validate" name="username" required>
              <br>

              <label for="password">Password</label><br>
              <input id="password" type="password" class="validate" name="password" required><br>

          <button class="button" type="submit" name="action">Log In</button>

        </form>
      </div>
    </div>

  </div>
</div>
</div>

</body>
